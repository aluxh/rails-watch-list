<div class="banner">
  <div class="container">
    <h1>Save any kinds of movies!</h1>
    <p>Classic</p>
  </div>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center">
    <h2 class="mb-3">My List</h2>
    <%= link_to "Create A Movie List", new_list_path, class: "btn btn-success rounded text-white" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
    <div class="col-4">
      <div class="card-category">
        <%= link_to list_path(list), class: "text-decoration-none" do  %>
          <%= list.name %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
